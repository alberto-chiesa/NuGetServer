@model IEnumerable<User>

@section Header {
	<h1>Application Users</h1>
}

<div class="row">
	<div class="span10">
		<table class="condensed-table zebra-striped">	
			<tr>
				<th>Username</th>
				<th>Roles</th>
				<th>&nbsp;</th>
			</tr>
			@foreach (var user in Model.OrderBy(x => x.Username.ToUpper())) {
				<tr>
					<td>@user.Username</td>
					<td>@string.Join(", ", user.Roles.OrderBy(r => r))</td>
					<td>
						<a href="@Url.Action(MVC.Users.Edit(user.Username))" class="small btn userActionButton">Edit</a>
					</td>
				</tr>
			}
			<tr>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>
					<a href="@Url.Action(MVC.Users.Create())" class="small btn userActionButton">New</a>
				</td>
			</tr>
		</table>
	</div>
</div>
