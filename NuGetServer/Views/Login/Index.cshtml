@model NuGetServer.Models.LoginModel

@section Header {
	<h1>Sign in</h1>
}

<div class="row">
	<div class="span10">
		@if (Model.LoginFailed) {
			<div class="alert-message error">
				Invalid username or password.
			</div>
		}
		@using (Html.BeginForm(MVC.Login.DoLogin().AddRouteValues(new { returnUrl = Model.ReturnUrl }), FormMethod.Post)) {
			<div class="clearfix">
				<label for="@Html.GetFieldId(m => m.Username)">Username</label>
				<div class="input">@Html.TextBoxFor(m => m.Username, new { @class = "span4" })</div>
			</div>
			<div class="clearfix">
				<label for="@Html.GetFieldId(m => m.Password)">Password</label>
				<div class="input">@Html.PasswordFor(m => m.Password, new { @class = "span4" })</div>
			</div>
			<div class="clearfix">
				<div class="input">
					<ul class="inputs-list">
						<li>
							<label>
								<input type="checkbox" name="@Html.GetFieldName(m => m.RememberMe)" id="@Html.GetFieldId(m => m.RememberMe)" @if (Model.RememberMe) { <text>checked="checked"</text> } />
								Remember Me
							</label>
						</li>
					</ul>
				</div>
			</div>
			<div class="clearfix">
				<div class="input">
					<button type="submit" class="btn primary">Sign in</button>
				</div>
			</div>
		}
	</div>
</div>
